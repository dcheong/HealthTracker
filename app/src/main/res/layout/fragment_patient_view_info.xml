<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PatientViewMockup$PatientInfoFragment">

    <com.ohyuna.healthtracker.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/image"
        android:minHeight="150dp"
        android:minWidth="150dp"
        android:focusable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstName"
        android:height="50dp"
        android:hint="Nombre"
        android:layout_alignTop="@+id/image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/image"
        android:layout_toLeftOf="@+id/image"
        android:inputType="textNoSuggestions"
        android:focusable="false"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastName"
        android:height="50dp"
        android:hint="Apallido"
        android:layout_below="@+id/secondName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/secondName"
        android:layout_alignEnd="@+id/secondName"
        android:inputType="textNoSuggestions"
        android:focusable="false"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/height"
        android:hint="talla"
        android:width="150px"
        android:textAlignment="textEnd"
        android:focusable="false"
        android:layout_below="@+id/headCirc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/weight"
        android:hint="peso"
        android:width="150px"
        android:textAlignment="textEnd"
        android:focusable="false"
        android:layout_below="@+id/height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="editar"
        android:id="@+id/editSave"
        android:width="200px"
        android:textColor="@color/abc_primary_text_material_dark"
        android:height="100px"
        android:background="@android:color/holo_red_light"
        android:layout_below="@+id/weightHeight"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Terminar"
        android:id="@+id/done"
        android:width="200px"
        android:height="100px"
        android:layout_below="@+id/weight"
        android:layout_toRightOf="@+id/bDay"
        android:layout_toEndOf="@+id/bDay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntuacion Z"
        android:id="@+id/textView"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignRight="@+id/image"
        android:layout_alignEnd="@+id/image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="cm"
        android:id="@+id/textView3"
        android:gravity="center_vertical"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/textView11"
        android:layout_toEndOf="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="kg"
        android:id="@+id/textView4"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/weight"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:gravity="center_vertical"
        android:id="@+id/heightAge"
        android:layout_alignTop="@+id/textView5"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:id="@+id/weightAge"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/heightAge"
        android:layout_alignStart="@+id/heightAge" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:id="@+id/weightHeight"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/weightAge"
        android:layout_alignStart="@+id/weightAge"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="ZHA"
        android:id="@+id/textView5"
        android:gravity="center_vertical"
        android:layout_above="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="ZWA"
        android:id="@+id/textView6"
        android:gravity="center_vertical"
        android:layout_above="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="ZWH"
        android:id="@+id/textView7"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/weightHeight"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bDay"
        android:hint="dd"
        android:gravity="center"
        android:nextFocusDown="@+id/bMonth"
        android:layout_below="@+id/gender"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusable="false"
        />

    <EditText
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bMonth"
        android:hint="mm"
        android:gravity="center"
        android:nextFocusDown="@+id/bYear"
        android:layout_below="@+id/textView9"
        android:layout_toRightOf="@+id/bDay"
        android:layout_toEndOf="@+id/bDay"
        android:focusable="false"
        />

    <EditText
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bYear"
        android:hint="aaaa"
        android:gravity="center"
        android:layout_below="@+id/textView11"
        android:layout_toRightOf="@+id/bMonth"
        android:layout_toEndOf="@+id/bMonth"
        android:focusable="false"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/headCirc"
        android:hint="cabeza"
        android:gravity="end"
        android:focusable="false"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="cm"
        android:id="@+id/textView10"
        android:gravity="center_vertical"
        android:focusable="false"
        android:layout_alignTop="@+id/headCirc"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gender"
        android:checked="true"
        android:clickable="false"
        android:layout_below="@+id/lastName"
        android:layout_toLeftOf="@+id/textView11"
        android:layout_toStartOf="@+id/textView11" />

    <TextView
        android:layout_width="28dp"
        android:layout_height="26dp"
        android:text="H"
        android:id="@+id/textView9"
        android:gravity="center"
        android:layout_alignTop="@+id/gender"
        android:layout_toLeftOf="@+id/gender"
        android:layout_toStartOf="@+id/gender" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="26dp"
        android:text="M"
        android:id="@+id/textView11"
        android:gravity="center"
        android:layout_alignTop="@+id/gender"
        android:layout_toRightOf="@+id/headCirc"
        android:layout_toEndOf="@+id/headCirc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secondName"
        android:hint="Segundo Nombre"
        android:layout_below="@+id/firstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/firstName"
        android:layout_alignEnd="@+id/firstName"
        android:focusable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Las Medidas"
        android:id="@+id/textView12"
        android:textSize="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/age"
        android:gravity="center_vertical"
        android:layout_below="@+id/bDay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chispitas"
        android:id="@+id/chispitasCheck"
        android:checked="false"
        android:layout_below="@+id/image"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5"
        android:focusable="false"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Albendazole"
        android:id="@+id/albendazoleCheck"
        android:layout_below="@+id/bYear"
        android:layout_alignLeft="@+id/chispitasCheck"
        android:layout_alignStart="@+id/chispitasCheck"
        android:checked="false"
        android:focusable="false"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R"
        android:id="@+id/recumbentCheck"
        android:checked="false"
        android:focusable="false"
        android:layout_alignTop="@+id/textView3"
        android:layout_toLeftOf="@+id/image"
        android:layout_toStartOf="@+id/image" />
</RelativeLayout>