<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ohyuna.healthtracker.PatientView$PatientInfoFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        android:minHeight="150dp"
        android:minWidth="150dp"
        android:background="@color/button_material_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstName"
        android:height="50dp"
        android:hint="First Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:layout_alignRight="@+id/done"
        android:layout_alignEnd="@+id/done"
        android:focusable="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastName"
        android:height="50dp"
        android:hint="Last Name"
        android:layout_below="@+id/firstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/image"
        android:layout_alignRight="@+id/firstName"
        android:layout_alignEnd="@+id/firstName"
        android:focusable="false"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/height"
        android:hint="height"
        android:width="150px"
        android:textAlignment="textEnd"
        android:focusable="false"
        android:layout_below="@+id/heightAge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/weight"
        android:hint="weight"
        android:width="150px"
        android:textAlignment="textEnd"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/height"
        android:layout_alignParentLeft="true"
        android:focusable="false"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/editSave"
        android:width="200px"
        android:textColor="@color/abc_primary_text_material_dark"
        android:height="100px"
        android:background="@android:color/holo_red_light"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/weightHeight"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/done"
        android:width="200px"
        android:height="100px"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_alignTop="@+id/editSave"
        android:layout_toLeftOf="@+id/image"
        android:layout_toStartOf="@+id/image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z-Scores"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/image"
        android:layout_alignRight="@+id/image"
        android:layout_alignEnd="@+id/image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="cm"
        android:id="@+id/textView3"
        android:gravity="center_vertical"
        android:layout_above="@+id/textView4"
        android:layout_alignRight="@+id/done"
        android:layout_alignEnd="@+id/done" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="kg"
        android:id="@+id/textView4"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/weight"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:gravity="center_vertical"
        android:id="@+id/heightAge"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:id="@+id/weightAge"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/heightAge"
        android:layout_alignStart="@+id/heightAge"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:id="@+id/weightHeight"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/weightAge"
        android:layout_alignStart="@+id/weightAge"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="height-for-age"
        android:id="@+id/textView5"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="weight-for-age"
        android:id="@+id/textView6"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/weightAge"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="weight-for-height"
        android:id="@+id/textView7"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/weightHeight"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bDay"
        android:hint="dd"
        android:gravity="center"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/done"
        android:layout_toStartOf="@+id/done"
        android:focusable="false"
        android:nextFocusDown="@+id/bMonth" />


    <EditText
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bMonth"
        android:hint="mm"
        android:gravity="center"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/bDay"
        android:layout_toEndOf="@+id/bDay"
        android:focusable="false"
        android:nextFocusDown="@+id/bYear" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="birthday"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/bDay"
        android:layout_toEndOf="@+id/bDay" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bYear"
        android:hint="yyyy"
        android:gravity="center"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/bMonth"
        android:layout_toEndOf="@+id/bMonth"
        android:focusable="false" />
</RelativeLayout>
