<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ohyuna.healthtracker.PatientView$PatientInfoFragment">

    <com.ohyuna.healthtracker.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/image"
        android:minHeight="150dp"
        android:minWidth="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/heightAge"
        android:layout_alignStart="@+id/heightAge" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstName"
        android:height="50dp"
        android:hint="First Name"
        android:layout_alignTop="@+id/image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/image"
        android:text="Yuna"
        android:layout_toLeftOf="@+id/image"
        android:focusable="false"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastName"
        android:height="50dp"
        android:hint="Last Name"
        android:layout_below="@+id/secondName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/secondName"
        android:layout_alignEnd="@+id/secondName"
        android:text="Oh"
        android:focusable="false"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/height"
        android:hint="height"
        android:width="150px"
        android:textAlignment="textEnd"
        android:text="100"
        android:layout_above="@+id/weight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusable="false"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/weight"
        android:hint="weight"
        android:width="150px"
        android:textAlignment="textEnd"
        android:layout_marginBottom="10dp"
        android:text="15"
        android:layout_above="@+id/done"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusable="false"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/editSave"
        android:width="200px"
        android:textColor="@color/abc_primary_text_material_dark"
        android:height="100px"
        android:background="@android:color/holo_red_light"
        android:layout_alignBottom="@+id/done"
        android:layout_alignLeft="@+id/weightHeight"
        android:layout_alignStart="@+id/weightHeight" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/done"
        android:width="200px"
        android:height="100px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_alignLeft="@+id/bMonth"
        android:layout_alignStart="@+id/bMonth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z-Scores"
        android:id="@+id/textView"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignLeft="@+id/heightAge"
        android:layout_alignStart="@+id/heightAge"
        android:layout_alignRight="@+id/image"
        android:layout_alignEnd="@+id/image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="cm"
        android:id="@+id/textView3"
        android:gravity="center_vertical"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/textView11"
        android:layout_toEndOf="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="kg"
        android:id="@+id/textView4"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/weight"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:gravity="center_vertical"
        android:id="@+id/heightAge"
        android:layout_alignTop="@+id/textView5"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:id="@+id/weightAge"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/heightAge"
        android:layout_alignStart="@+id/heightAge" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:id="@+id/weightHeight"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/weightAge"
        android:layout_alignStart="@+id/weightAge"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="height-for-age"
        android:id="@+id/textView5"
        android:gravity="center_vertical"
        android:layout_above="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="weight-for-age"
        android:id="@+id/textView6"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/weightAge"
        android:layout_toRightOf="@+id/weightAge"
        android:layout_toEndOf="@+id/weightAge" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="weight-for-height"
        android:id="@+id/textView7"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/weightHeight"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bDay"
        android:hint="dd"
        android:gravity="center"
        android:nextFocusDown="@+id/bMonth"
        android:text="10"
        android:layout_below="@+id/gender"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusable="false"
        />

    <EditText
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bMonth"
        android:hint="mm"
        android:gravity="center"
        android:nextFocusDown="@+id/bYear"
        android:text="10"
        android:layout_below="@+id/textView9"
        android:layout_toRightOf="@+id/bDay"
        android:layout_toEndOf="@+id/bDay"
        android:focusable="false"
        />

    <EditText
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bYear"
        android:hint="yyyy"
        android:gravity="center"
        android:text="2014"
        android:layout_below="@+id/textView11"
        android:layout_toRightOf="@+id/bMonth"
        android:layout_toEndOf="@+id/bMonth"
        android:focusable="false"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/headCirc"
        android:hint="head"
        android:gravity="end"
        android:focusable="false"
        android:text="25"
        android:layout_alignBaseline="@+id/heightAge"
        android:layout_alignBottom="@+id/heightAge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="cm"
        android:id="@+id/textView10"
        android:gravity="center_vertical"
        android:focusable="false"
        android:layout_alignTop="@+id/headCirc"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gender"
        android:checked="true"
        android:layout_below="@+id/image"
        android:layout_toLeftOf="@+id/textView11"
        android:layout_toStartOf="@+id/textView11"
        android:clickable="false"/>

    <TextView
        android:layout_width="28dp"
        android:layout_height="26dp"
        android:text="M"
        android:id="@+id/textView9"
        android:gravity="center"
        android:layout_alignTop="@+id/gender"
        android:layout_toLeftOf="@+id/gender"
        android:layout_toStartOf="@+id/gender" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="26dp"
        android:text="F"
        android:id="@+id/textView11"
        android:gravity="center"
        android:layout_alignTop="@+id/gender"
        android:layout_toRightOf="@+id/headCirc"
        android:layout_toEndOf="@+id/headCirc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secondName"
        android:hint="Second Name"
        android:layout_below="@+id/firstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/firstName"
        android:layout_alignEnd="@+id/firstName"
        android:text="Hailey"
        android:focusable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Measurements"
        android:id="@+id/textView12"
        android:textSize="24dp"
        android:layout_below="@+id/bDay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/age"
        android:layout_alignBottom="@+id/bYear"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:gravity="center_vertical" />
</RelativeLayout>