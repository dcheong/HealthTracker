<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:windowSoftInputMode="adjustPan"
    tools:context="com.ohyuna.healthtracker.Create">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        android:minHeight="150dp"
        android:minWidth="150dp"
        android:background="@color/button_material_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstName"
        android:height="50dp"
        android:hint="First Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:layout_alignRight="@+id/cancel"
        android:layout_alignEnd="@+id/cancel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastName"
        android:height="50dp"
        android:hint="Last Name"
        android:layout_below="@+id/firstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/image"
        android:layout_alignRight="@+id/firstName"
        android:layout_alignEnd="@+id/firstName" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/age"
        android:hint="age"
        android:width="100dp"
        android:textAlignment="textEnd"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/height"
        android:hint="height"
        android:width="150px"
        android:textAlignment="textEnd"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/age"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/age"
        android:layout_alignEnd="@+id/age" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/weight"
        android:hint="weight"
        android:width="150px"
        android:textAlignment="textEnd"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/height"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/age"
        android:layout_alignEnd="@+id/age" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save"
        android:width="200px"
        android:textColor="@color/abc_primary_text_material_dark"
        android:height="100px"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:background="@android:color/holo_red_light" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:width="200px"
        android:height="100px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z-Scores"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/image"
        android:layout_alignRight="@+id/image"
        android:layout_alignEnd="@+id/image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="years"
        android:id="@+id/textView2"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/age"
        android:layout_toRightOf="@+id/age"
        android:layout_toEndOf="@+id/age"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="cm"
        android:id="@+id/textView3"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/height"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="kg"
        android:id="@+id/textView4"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/weight"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:gravity="center_vertical"
        android:id="@+id/heightAge"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:id="@+id/weightAge"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/heightAge"
        android:layout_alignStart="@+id/heightAge"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:id="@+id/weightHeight"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/weightAge"
        android:layout_alignStart="@+id/weightAge"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="height-for-age"
        android:id="@+id/textView5"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="weight-for-age"
        android:id="@+id/textView6"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/weightAge"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="weight-for-height"
        android:id="@+id/textView7"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/weightHeight"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
