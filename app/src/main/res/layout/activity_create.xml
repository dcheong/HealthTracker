<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:windowSoftInputMode="adjustPan"
    tools:context="com.ohyuna.healthtracker.Create"
    android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        android:minHeight="150dp"
        android:minWidth="150dp"
        android:background="@color/button_material_light"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/heightAge"
        android:layout_alignStart="@+id/heightAge" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstName"
        android:height="50dp"
        android:hint="First Name"
        android:layout_alignTop="@+id/image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/image"
        android:layout_alignRight="@+id/bYear"
        android:layout_alignEnd="@+id/bYear" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastName"
        android:height="50dp"
        android:hint="Last Name"
        android:layout_below="@+id/firstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/image"
        android:layout_alignRight="@+id/firstName"
        android:layout_alignEnd="@+id/firstName" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/height"
        android:hint="height"
        android:width="150px"
        android:textAlignment="textEnd"
        android:layout_below="@+id/heightAge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/weight"
        android:hint="weight"
        android:width="150px"
        android:textAlignment="textEnd"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save"
        android:width="200px"
        android:textColor="@color/abc_primary_text_material_dark"
        android:height="100px"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:background="@android:color/holo_red_light" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:width="200px"
        android:height="100px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z-Scores"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/image"
        android:layout_alignRight="@+id/image"
        android:layout_alignEnd="@+id/image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="cm"
        android:id="@+id/textView3"
        android:gravity="center_vertical"
        android:layout_above="@+id/weight"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="kg"
        android:id="@+id/textView4"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/weight"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:gravity="center_vertical"
        android:id="@+id/heightAge"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:id="@+id/weightAge"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/heightAge"
        android:layout_alignStart="@+id/heightAge" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:id="@+id/weightHeight"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/weightAge"
        android:layout_alignStart="@+id/weightAge"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="height-for-age"
        android:id="@+id/textView5"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="weight-for-age"
        android:id="@+id/textView6"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/weightAge"
        android:layout_toRightOf="@+id/weightAge"
        android:layout_toEndOf="@+id/weightAge" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="weight-for-height"
        android:id="@+id/textView7"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/weightHeight"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bDay"
        android:hint="dd"
        android:gravity="center"
        android:nextFocusDown="@+id/bMonth"
        android:layout_alignTop="@+id/bMonth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bMonth"
        android:hint="mm"
        android:gravity="center"
        android:nextFocusDown="@+id/bYear"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/cancel"
        android:layout_alignStart="@+id/cancel" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bYear"
        android:hint="yyyy"
        android:gravity="center"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/bMonth"
        android:layout_toEndOf="@+id/bMonth" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/headCirc"
        android:layout_above="@+id/height"
        android:layout_alignRight="@+id/height"
        android:layout_alignEnd="@+id/height"
        android:hint="head"
        android:gravity="end"
        android:alpha="0.5"
        android:focusable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="cm"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/headCirc"
        android:layout_alignRight="@+id/cancel"
        android:layout_alignEnd="@+id/cancel"
        android:gravity="center_vertical"
        android:focusable="false" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gender"
        android:checked="false"
        android:layout_above="@+id/textView"
        android:layout_alignRight="@+id/headCirc"
        android:layout_alignEnd="@+id/headCirc" />

    <TextView
        android:layout_width="28dp"
        android:layout_height="26dp"
        android:text="M"
        android:id="@+id/textView9"
        android:gravity="center"
        android:layout_alignBottom="@+id/gender"
        android:layout_toLeftOf="@+id/gender"
        android:layout_toStartOf="@+id/gender" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="26dp"
        android:text="F"
        android:id="@+id/textView11"
        android:gravity="center"
        android:layout_alignBottom="@+id/gender"
        android:layout_toRightOf="@+id/gender"
        android:layout_toEndOf="@+id/gender" />

</RelativeLayout>
